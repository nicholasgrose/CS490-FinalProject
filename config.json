{
	"kind": "Pod",
	"apiVersion": "v1",
	"metadata": {
		"name": "cs490-final-project",
		"labels": {
			"app": "final-project"
		}
	},
	"spec": {
		"hostNetwork": true,
		"containers": [{
				"name": "compression-service",
				"image": "compression_service:latest",
				"imagePullPolicy": "IfNotPresent",
				"ports": [{
					"containerPort": 15707,
					"hostPort": 15707
				}],
				"volumeMounts": [{
					"name": "shared",
					"mountPath": "/mnt/shared"
				}],
				"command": ["compression_service"]
			},
			{
				"name": "file-service",
				"image": "file_service:latest",
				"imagePullPolicy": "IfNotPresent",
				"ports": [{
					"containerPort": 31415,
					"hostPort": 31415
				}],
				"volumeMounts": [{
					"name": "shared",
					"mountPath": "/mnt/shared"
				}],
				"command": ["file_service"]
			}
		],
		"volumes": [
			{
			"name": "shared",
			"emptyDir": {}
			}
		]
	}
}